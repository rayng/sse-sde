L=16   #<---- change lattice size  Lx  
OBJECTS = /usr/local/lib/libRandom.a
FFTW_LIBS = /usr/lib64/
RANDOM_HD = /usr/local/include/
FFTW_HD = /usr/include/
EIGEN_HD = /usr/include/eigen3/
CLASSED_HD = ../lib/


SOURCE = hybrid.cpp bin.cpp optimise.cc timebin.cpp lattice.cpp trajectory.cpp 
TARGET = hybrid$L
CPP_HDFLAGS = -I$(RANDOM_HD) -I$(EIGEN_HD) -I$(CLASSES_HD) 

OPTIONS =  -finline-functions -funroll-loops  -O2 

CC = g++

ALL:
	$(CC) $(CPP_FLAGS) $(SOURCE) $(CPP_HDFLAGS) $(CPP_LDFLAGS) $(LIBRARIES) -o $(TARGET) $(OBJECTS) $(OPTIONS)	
clean:
	rm -f *.o*~


